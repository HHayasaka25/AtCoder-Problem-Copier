{
	"manifest_version": 3,
	"name": "AtCoder Problem Copier",
	"short_name": "AtCopy",
	"version": "1.0.0",
	"description": "問題文をMarkdown形式でコピーするボタンを追加するChrome拡張機能。",
	"content_scripts": [
		{
			"matches": [
				"https://atcoder.jp/contests/*/tasks/*",
				"http://localhost/*"
			],
			"js": [
				"content.js"
			],
			"run_at": "document_idle"
		}
	]
}